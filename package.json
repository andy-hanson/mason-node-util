{
	"name": "mason-node-util",
	"version": "0.0.0",
	"files": ["dist", "src"],
	"scripts": {
		"build": "babel src --out-dir dist --source-maps",
		"watch": "babel src --out-dir dist --source-maps --watch",
		"lint": "eslint src"
	},
	"dependencies": {
		"chalk": "1.1.1",
		"mason-compile": "mason-lang/mason-compile",
		"source-map-support": "0.3.3"
	},
	"devDependencies": {
		"babel-cli": "6.0.14",
		"babel-plugin-transform-es2015-destructuring": "6.0.14",
		"babel-plugin-transform-es2015-modules-umd": "6.0.14",
		"babel-plugin-transform-es2015-parameters": "6.0.14",
		"babel-plugin-transform-strict-mode": "6.0.14",
		"eslint": "1.8.0"
	},
	"repository": "mason-lang/mason-node-util",
	"babel": {
		"plugins": [
			"transform-es2015-destructuring",
			"transform-es2015-modules-umd",
			"transform-es2015-parameters",
			"transform-strict-mode"
		]
	},
	"eslintConfig": {
		"ecmaFeatures": {
			"arrowFunctions": true,
			"blockBindings": true,
			"classes": true,
			"defaultParams": true,
			"destructuring": true,
			"forOf": true,
			"generators": true,
			"modules": true,
			"objectLiteralShorthandMethods": true,
			"objectLiteralShortandProperties": true,
			"restParams": true,
			"spread": true,
			"templateStrings": true
		},
		"globals": {"require": true},
		"rules": {
			"array-bracket-spacing": 1,
			"comma-style": [1, "last"],
			"curly": [1, "multi"],
			"default-case": 1,
			"max-len": [1, 100, 4],
			"no-extra-parens": 1,
			"no-floating-decimal": 1,
			"no-multiple-empty-lines": [1, {"max": 2}],
			"no-plusplus": 1,
			"no-spaced-func": 1,
			"no-throw-literal": 1,
			"no-trailing-spaces": 1,
			"no-undef": 1,
			"no-unused-vars": 1,
			"no-var": 1,
			"no-void": 1,
			"object-curly-spacing": 1,
			"operator-assignment": [1, "never"],
			"padded-blocks": [1, "never"],
			"quote-props": [1, "as-needed"],
			"quotes": [1, "single"],
			"space-before-blocks": [1, "always"],
			"space-before-function-paren": [1, "never"],
			"spaced-comment": 1,
			"space-in-parens": [1, "never"]
		}
	},
	"license": "WTFPL"
}